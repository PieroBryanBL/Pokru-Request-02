---
import SocialMedia from "./SocialMedia.astro";
import MenuButtons from "./MenuButtons.astro";
---

<!-- Menu Card -->
<section
  class="relative flex justify-center items-center w-11/12 sm:w-7/12 lg:w-4/12 bg-[#FF8383] p-4 mb-16 sm:mb-40 lg:mb-0 rounded-[50px] border-[3px] border-[#FF7DA3] shadow-[10px_4px_6px_#d63e3ecf] animate-slide-right"
>
  <!-- Area de botones unicamente -->
  <div
    class="bg-[#FFC7D2] rounded-[50px] border-[5px] border-white flex justify-center items-center"
  >
    <div class="flex flex-col justify-center items-center gap-3">
      <!-- Encabezado -->
      <div class="flex justify-center items-center">
        <img
          class="-translate-y-8 w-11/12 hover:-rotate-3 hover:scale-110 transition animate-fade-in-slow"
          src="./welcome.webp"
          alt="Imagen de Bienvenida"
        />
      </div>
      <!-- Primer botón -->
      <MenuButtons
        ref="#"
        source="./portfolio.webp"
        alttext="Button to Portafolio"
      />

      <!-- Segundo botón -->
      <MenuButtons ref="#" source="./prices.webp" alttext="Button of Prices" />

      <!-- Tercer botón -->
      <MenuButtons ref="#" source="./ych.webp" alttext="YCH" />

      <!-- Cuarto botón -->
      <MenuButtons
        ref="#"
        source="./terms.webp"
        alttext="To see Terms of service"
      />

      <!-- Quinto botón -->
      <a href="#">
        <img
          class="object-cover border-[5px] rounded-[75px] border-white bg-[#FFB2B7] w-7/12 mx-auto px-2 py-1 shadow-[0px_4px_4px_#FF7CA3] hover:scale-105 transition"
          src="./ordernow.webp"
          alt="Ordena ahora"
        />
      </a>
      <!-- ÁREA DE REDES SOCIALES -->
      <div class="flex justify-center items-center">
        <div
          class="translate-y-10 px-4 flex w-8/12 border-[5px] rounded-[30px] border-white bg-[#FF8383]"
        >
          <!-- Instagram -->
          <SocialMedia
            ref="#"
            source="./ig-icon.webp"
            alttext="Icon Instagram"
          />

          <!-- Facebook -->
          <SocialMedia
            ref="#"
            source="./fb-icon.webp"
            alttext="Icon Facebook"
          />

          <!-- Email -->
          <SocialMedia
            ref="#"
            source="./email-icon.webp"
            alttext="Icon Email"
          />
        </div>
      </div>
    </div>
  </div>
</section>
